{
    "name": "npm-workflow",
    "version": "0.1.0",
    "description": "`npm` 工作流",
    "main": "index.js",
    "config": {
        "port": 3000
    },
    "scripts": {
        "lint": "npm-run-all --parallel lint:*",
        "lint:js": "eslint *.js",
        "lint:js:fix": "npm run lint:js -- --fix",
        "lint:css": "stylelint *.less",
        "lint:json": "jsonlint --quiet test.json",
        "lint:markdown": "markdownlint --config .markdownlint.json *.md",
        "pretest": "npm run lint",
        "test": "mocha tests/",
        "watch":"npm-run-all --parallel watch:*",
        "watch:lint":"onchange -i \"**/*.js\" \"**/*.less\" \"**/*.md\" -- npm run lint",
        "watch:test": "npm t -- --watch",
        "cover": "node scripts/cover.js",
        "cover:serve": "scripty",
        "cover:open": "scripty"
    },
    "keywords": [],
    "author": "zhuang chen <suchenxiaoyu@qq.com>",
    "license": "MIT",
    "devDependencies": {
        "chai": "^4.3.4",
        "chalk": "^4.1.0",
        "eslint": "^7.22.0",
        "http-server": "^0.12.3",
        "jsonlint": "^1.6.3",
        "markdownlint-cli": "^0.27.1",
        "mocha": "^8.3.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "onchange": "^7.1.0",
        "opn-cli": "^5.0.0",
        "scripty": "^2.0.0",
        "shelljs": "^0.8.4",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js",
            ".*.js"
        ]
    }
}
