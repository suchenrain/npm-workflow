{
    "name": "npm-workflow",
    "version": "0.1.0",
    "description": "`npm` 工作流",
    "main": "index.js",
    "scripts": {
        "lint": "npm-run-all --parallel lint:*",
        "lint:js": "eslint *.js",
        "lint:js:fix": "npm run lint:js -- --fix",
        "lint:css": "stylelint *.less",
        "lint:json": "jsonlint --quiet test.json",
        "lint:markdown": "markdownlint --config .markdownlint.json *.md",
        "pretest": "npm run lint",
        "test": "mocha tests/",
        "precover": "rm -rf coverage",
        "cover": "nyc --reporter=html npm test",
        "postcover": "rm -rf .nyc_output && npx open-cli coverage/index.html"
    },
    "keywords": [],
    "author": "zhuang chen <suchenxiaoyu@qq.com>",
    "license": "MIT",
    "devDependencies": {
        "chai": "^4.3.4",
        "eslint": "^7.22.0",
        "jsonlint": "^1.6.3",
        "markdownlint-cli": "^0.27.1",
        "mocha": "^8.3.2",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "opn-cli": "^5.0.0",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js",
            ".*.js"
        ]
    }
}
