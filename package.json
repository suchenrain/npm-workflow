{
    "name": "npm-workflow",
    "version": "0.1.2",
    "description": "`npm` 工作流",
    "main": "index.js",
    "config": {
        "port": 3000
    },
    "scripts": {
        "logs": "tail -f logs/*",
        "predeploy": "yarn && npm run build",
        "deploy": "pm2 restart ecosystem.config.js",
        "bump": "scripty",
        "release:patch": "npm version patch && git push --set-upstream origin && git push --tags",
        "release:minor": "npm version minor && git push --set-upstream origin && git push --tags",
        "release:major": "npm version major && git push --set-upstream origin && git push --tags",
        "lint": "npm-run-all --parallel lint:*",
        "lint:js": "eslint *.js",
        "lint:js:fix": "npm run lint:js -- --fix",
        "lint:css": "stylelint *.less",
        "lint:json": "jsonlint --quiet test.json",
        "lint:markdown": "markdownlint --config .markdownlint.json *.md",
        "pretest": "npm run lint",
        "test": "mocha tests/",
        "watch": "npm-run-all --parallel watch:*",
        "watch:lint": "onchange -i \"**/*.js\" \"**/*.less\" \"**/*.md\" -- npm run lint",
        "watch:test": "npm t -- --watch",
        "cover": "node scripts/cover.js",
        "cover:serve": "scripty",
        "cover:open": "scripty",
        "client": "npm-run-all --parallel client:*",
        "client:reload-server": "livereload client/",
        "client:static-server": "http-server client/",
        "prepare": "husky install",
        "prebuild": "rm -rf dist && bash -c \"mkdir -p dist/{images,styles,scripts}\"",
        "build": "scripty",
        "build:images": "scripty",
        "build:styles": "scripty",
        "build:scripts": "scripty",
        "build:hash": "scripty"
    },
    "lint-staged": {
        "*.js": "eslint",
        "*.less": "stylelint",
        "*.css": "stylelint",
        "*.json": "jsonlint --quiet",
        "*.md": "markdownlint --config .markdownlint.json"
    },
    "keywords": [],
    "author": "zhuang chen <suchenxiaoyu@qq.com>",
    "license": "MIT",
    "devDependencies": {
        "chai": "^4.3.4",
        "chalk": "^4.1.0",
        "cssmin": "^0.4.3",
        "eslint": "^7.22.0",
        "express": "^4.17.1",
        "hashmark": "^5.0.0",
        "http-server": "^0.12.3",
        "husky": "^5.2.0",
        "imagemin-cli": "^6.0.0",
        "jsonlint": "^1.6.3",
        "less": "^4.1.1",
        "lint-staged": "^10.5.4",
        "livereload": "^0.9.3",
        "markdownlint-cli": "^0.27.1",
        "mocha": "^8.3.2",
        "morgan": "^1.10.0",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.1.0",
        "onchange": "^7.1.0",
        "opn-cli": "^5.0.0",
        "pm2": "^4.5.5",
        "replaceinfiles": "^1.1.4",
        "scripty": "^2.0.0",
        "shelljs": "^0.8.4",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0",
        "uglify-es": "^3.3.9"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js",
            ".*.js"
        ]
    }
}
